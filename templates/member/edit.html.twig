{% extends 'base.html.twig' %}

{% block title %}GeTon - Membres{% endblock %}

{% block body %}
<!-- Intro section -->
	<section class="intro-section spad">
		<div class="container bg-light rounded">
            <div class="row">
                <div class="col"></div>
                <div class="col-md-6 col-offset-3">
                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h6 class="card-title"> </small>Modifier les informations de  <span class="badge rounded-pill bg-danger text-white"> 
                                {{ member.lastname }} {{ member.firstname }}</span></small>
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="message-flash">
                            {% for flashError in app.flashes('verify_email_error') %}
                                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                            {% endfor %}
                            </div>            
                           
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col">                                        
                                        {{ form_row(form.firstname) }}                                       
                                    </div>
                                    <div class="col">
                                        {{ form_row(form.lastname) }}                                        
                                    </div>
                                    <div class="col">                                        
                                        {{ form_row(form.email) }}                                       
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">                                        
                                        {{ form_row(form.address) }}                                        
                                    </div>                                
                                </div>
                                <div class="row">
                                    <div class="col">
                                        {{ form_row(form.phone) }}
                                    </div>
                                    <div class="col">
                                        {{ form_row(form.registeredAt) }}
                                    </div>
                                    <div class="col">
                                        {{ form_row(form.status) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        {{ form_row(form.roles) }}
                                    </div>
                                    <div class="col">
                                            {{ form_row(form.suspendedAt) }}
                                    </div> 
                                </div>                                                                        
                                <div class="input-group">
                                    <input type="submit" value="Valider" class="btn btn-success btn-sm ml-auto">
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                <div class="col"></div>
            </div>                    
        </div>
	</section>
	<!-- Intro section end -->
{% endblock %}
