<!DOCTYPE html>
<html>
  <head>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="GeTon" name="author">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Exclusively for all! " >
    <meta name="keywords" content="">

    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/favicon.png') }}">    

    <title>GeTon - Login</title>
    <!-- Material icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp"
      rel="stylesheet">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="{{ asset('loginstyle.css') }}">
</head>
<body>
    <div class="center">        
        <div class="header">
            <h3>GeTon - Login</h3>
        </div>
        <form method="post">
            <div class="message-flash">
                {% if error %}
                    <div style="background: #eb2d43; color:#fff; text-align:center; padding:3px; border-radius:3px;">{{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                    <br>
                {% endif %}
                {% if app.user %}
                    <div style="background: yellow; ">
                        Connecté en tant que {{ app.user.firstname }} {{ app.user.lastname }}. <a href="{{ path('app_logout') }}">Déconnexion ?</a>
                    </div>
                        <br>
                {% endif %}                                    
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
                <i class="fa-solid fa-envelope"></i>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="pass" class="form-control" autocomplete="current-password" required>
                <i class="fa-solid fa-eye"></i>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">
            <div class="form-group">
                <input type="submit" value="Login">
            </div>
            <div class="form-group pass-forgot">
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié?</a>
            </div>
        </form>                           
    </div>

    

  <script src="{{ asset('index.js') }}"></script>
  <script>
     var pass = document.getElementById('pass');
     var icon = document.querySelector(".fa-eye");

    icon.addEventListener("click", () => {
     if(pass.type === "password"){
       pass.type = "text";
       pass.style.marginTop = "4px";
       icon.style.color = "#7f2092";
     } else {
       pass.type = "password";
       icon.style.color = "grey";
       pass.style.marginTop = "4px";
     }
    });
  </script>
  </body>
</html>