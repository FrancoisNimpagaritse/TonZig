{% extends 'base.html.twig' %}

{% block title %}GeTon - Edition transaction caisse{% endblock %}

{% block body %}
<div class="container">
     <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8 col-md-12">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1 mt-5 mb-5">
                                <h5 class="text-center">Editer une transaction manuelle de la caisse</h5>
                            </div>
                            <div class="message-flash">
                                {% for flashError in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}
                            </div>
                            {{ form_start(form) }}
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            {{ form_row(form.transactionDate) }}
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            {{ form_row(form.amount) }}
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            {{ form_row(form.account) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-xs-12 col-md-3">
                                        <div class="form-group">
                                            {{ form_row(form.type) }}
                                        </div>
                                    </div>
                                    <div class="col-xs-12 col-md-7">
                                        <div class="form-group">
                                            {{ form_row(form.description) }}
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            {{ form_row(form.originCode) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="input-group">
                                    <input type="submit" value="Valider" class="btn btn-success d-block btn-sm ml-auto">
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}