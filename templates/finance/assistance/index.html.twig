{% extends 'base.html.twig' %}

{% block title %}GeTon - Assistances{% endblock %}

{% block body %}
    <!-- Intro section -->
	<section class="intro-section spad">
		<div class="container">
            <div class="card">
                <div class="card-body">
                    <div class="register-head pb-2">
                        <h6 class="card-title">Assistances accordées aux membres durant ce round</h6>
                        <a href="{{ path('finances_assistances_create') }}" class="bg-light text-danger"><b>+</b>Nouveau</a>
                    </div>
                    <table class="table table-bordered table-sm table-hover">
                        <thead>
                            <tr>
                                <th scope="col"><small><b>ID</b></small></th>
                                <th scope="col"><small><b>Date</b></small></th>
                                <th scope="col"><small><b>Membre</b></small></th>
                                <th scope="col"><small><b>Montant</b></small></th>
                                <th scope="col"><small><b>Motif</b></small></th>
                                <th scope="col"><small><b>Action</b></small></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for a in assistances %}                                    									
                            <tr>
                                <td scope="row"><small>{{ a.id }}</small></td>
                                <td scope="row"><small>{{ a.distributedDate | date('d/m/Y') }}</small></td>
                                <td><small>{{ a.beneficiary.firstname }} {{ a.beneficiary.lastname }}</small></td>
                                <td><small>{{ a.amount }}</small></td>
                                <td><small>{{ a.reason }}</small></td>
                                <td>
                                <!-- Button action -->
                                    <a href="{{ path('finances_assistances_edit', {'id': a.id}) }} " title="delete" onclick="return confirm('Attention! Etes-vous sûr de vouloir modifier?');" class="btn btn-outline-warning rounded-btn btn-sm">
                                    <i class="fa fa-pencil"></i> 
                                    </a>
                                    <a href="{{ path('finances_assistances_delete', {'id': a.id}) }}" title="delete" class="btn btn-outline-danger rounded-btn btn-sm" onclick="return confirm('Attention! Etes-vous sûr de vouloir supprimer?')">
                                    <i class="fa fa-trash"></i> 
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>	
		</div>
	</section>
	<!-- Intro section end -->
{% endblock %}

