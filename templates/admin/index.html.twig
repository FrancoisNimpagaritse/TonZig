{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    
       
        <!-- ----------------------START OF MAIN --------------------------------- -->
        <main>
            <h1>Dashboard</h1>
            <div class="date">
                <input type="date" name="" id="">
            </div>
            <div class="insights">
                <div class="sales">
                     <span class="material-icons-sharp">analytics</span>
                     <div class="middle">
                        <div class="left">
                            <h3>Total Sales</h3>
                            <h1>2,500&euro;</h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx='38' cy='38' r='36'></circle>
                            </svg>
                            <div class="number">
                                <p>81%</p>
                            </div>
                        </div>
                     </div>
                     <small class="text-muted">Last 24 Hours</small>
                </div>
                <!-- END OF SALES -->
                <div class="expenses">
                     <span class="material-icons-sharp">bar_chart</span>
                     <div class="middle">
                        <div class="left">
                            <h3>Total Expenses</h3>
                            <h1>1,200&euro;</h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx='38' cy='38' r='36'></circle>
                            </svg>
                            <div class="number">
                                <p>62%</p>
                            </div>
                        </div>
                     </div>
                     <small class="text-muted">Last 24 Hours</small>
                </div>
                <!-- END OF EXPENSES -->
                <div class="income">
                     <span class="material-icons-sharp">stacked_line_chart</span>
                     <div class="middle">
                        <div class="left">
                            <h3>Total Income</h3>
                            <h1>1,025&euro;</h1>
                        </div>
                        <div class="progress">
                            <svg>
                                <circle cx='38' cy='38' r='36'></circle>
                            </svg>
                            <div class="number">
                                <p>44%</p>
                            </div>
                        </div>
                     </div>
                     <small class="text-muted">Last 24 Hours</small>
                </div>
                <!-- END OF INCOME -->
            </div>
            <!-- END OF INSIGHTS -->

            <div class="recent-orders">
                <h2>Recent Orders</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Product Number</th>
                            <th>Payment</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Bread popped</td>
                            <td>5746</td>
