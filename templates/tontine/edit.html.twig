{% extends 'base.html.twig' %}

{% block title %}GeTon - Editer Tontine{% endblock %}

{% block body %}
{{ include("partials/_title_section.html.twig", {'name': 'Edition tontine'}) }}
<div class="container">
     <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h5 class="text-center">Editer la Tontine <small>{{ tontine.name }}</small></h5>
                            </div>
                            <div class="message-flash">
                                {% for flashError in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}
                            </div>
                            {{ form_start(form) }}
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            {{ form_row(form.name) }}
                                        </div>
                                    </div>                                   
                                </div>
                                <div class="form-row">
                                     <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.createdAt) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">                               
                                        <div class="form-group">
                                            {{ form_row(form.addressSiegeSocial) }}
                                        </div>
                                    </div>                                    
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.currency) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.slogan) }}        
                                        </div>
                                    </div>                                    
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.type) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.description) }}
                                        </div>
                                    </div>                                 
                                </div>                                
                                <div class="form-group">
                                    <button type="submit" class="btn btn-fill-out btn-block" name="register">Valider</button>
                                </div>
                            {{ form_end(form) }}
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}