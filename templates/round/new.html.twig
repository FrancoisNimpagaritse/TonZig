{% extends 'base.html.twig' %}

{% block title %}GeTon - Créer Round{% endblock %}

{% block body %}
{{ include("partials/_title_section.html.twig", {'name': 'Créer un nouveau round'}) }}
<div class="container">
     <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h5 class="text-center">Créer un Nouveau Round</h5>
                            </div>
                            <div class="message-flash">
                                {% for flashError in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                                {% endfor %}
                            </div>
                            {{ form_start(form) }}
                                <div class="form-row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            {{ form_row(form.roundNumber) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            {{ form_row(form.status) }}
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            {{ form_row(form.roundStartDate) }}
                                        </div>
                                    </div>                                   
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.meetingStartHour) }}
                                        </div>
                                    </div>  
                                    <div class="col-md-6">                               
                                        <div class="form-group">
                                            {{ form_row(form.monthlyCotisation) }}
                                        </div>
                                    </div>                                    
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.monthlyCaisseSociale) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.loanMonthsDuration) }}        
                                        </div>
                                    </div>                                    
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.loanMonthlyInterestPercentage) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.loanPrincipalGracePeriod) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.loanInterestGracePeriod) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.principalLatePenalityPercentage) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.interestLatePenalityPercentage) }}
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(form.meetingLatePenalityAmount) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            {{ form_row(form.meetingAbsencePenalityAmount) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            {{ form_row(form.meetingFrequency) }}
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            {{ form_row(form.totalMeetings) }}
                                        </div>
                                    </div>                                                      
                                </div> 
                                <div class="form-group">
                                        <button type="submit" class="btn btn-fill-out btn-block" name="register">Valider</button>
                                </div>
                            {{ form_end(form) }}
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}